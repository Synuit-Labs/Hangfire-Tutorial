@model IEnumerable<RouteDelivery.Models.DeliverySchedule>

@{
    ViewBag.Title = "Index";
}

<h2>Delivery Schedules</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OptimizationRecurringJobID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScheduleDateFormatted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OptimizationRecurringJobID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScheduleDateFormatted)
        </td>
        <td>
            @Html.ActionLink("Schedule Details", "Index", "DriverScheduleEntry", new { Id = item.ID }, null)
        </td>
    </tr>
}

</table>
